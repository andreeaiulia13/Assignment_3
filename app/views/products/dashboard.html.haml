!!!
%html 
  %head
    %title Dashboard 

  %body
    .dashboard-header
      %h1 PRODUCTS LIST

    .dashboard-table
      %table
        %thead
          %tr
            %th Title
            %th Description 
            %th Price 
            %th Image 
        
        %tbody
          - @products.each do |product|
            %tr
              %td= product.title
              %td= product.description
              %td= product.price.to_s + " $"
              
              -if product.image.attached?
                %td= image_tag product.image, width: '100px', height: '100px', class: 'show-image'
              
              %td= link_to 'Show', product, class: "options", id: "show"
              %td= link_to 'Edit', edit_product_path(product), class: "options", id: "edit"
              %td= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?'}, class: "options", id: "destroy"
   
    =link_to 'ADD NEW PRODUCT', new_product_path, class: 'path'
    =link_to 'MAIN PAGE', root_path, class: 'path'

